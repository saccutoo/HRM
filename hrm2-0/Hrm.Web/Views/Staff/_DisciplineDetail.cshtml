
@using Hrm.Framework.Helper
@using Hrm.Framework.Models
@using Hrm.Common
@model Hrm.Web.ViewModels.StaffBonusDisciplineViewModel
@{
    Layout = null;
}
<div class="detail-bonus-container display-inline-block">
    <div class="hrm-v2-modal-header">@M(Model.StaffBonusDiscipline.GroupId.ToString() + ";" + DataType.MasterData + ";Name")</div>
    <div class="hrm-v2-modal-body">
        <section class="hrmv2-section">
            <div class="col-md-12 pd-0 display-inline-block">
                <div class="col-md-7 pd-l-0">
                    @Html.Partial(UrlHelpers.Template("_PropertyField.cshtml"), new PropertyField() { Label = T("Staff.Detail.DecisionNo").ToString(), Text = Model.StaffBonusDiscipline.DecisionNo })
                </div>
                <div class="col-md-5 pd-l-0">
                    @Html.Partial(UrlHelpers.Template("_PropertyField.cshtml"), new PropertyField() { Label = T("Staff.RewardDiscipline.Status").ToString(), Text = M(Model.StaffBonusDiscipline.Status.ToString() + ";" + DataType.MasterData + ";Name").ToString() })
                    
                    
                </div>
            </div>
            <div class="col-md-12 pd-0 display-inline-block">
                <div class="col-md-7 pd-l-0">
                    @if (Model.StaffBonusDiscipline.SignDate != null && Model.StaffBonusDiscipline.SignDate != DateTime.MinValue)
                    {
                        @Html.Partial(UrlHelpers.Template("_PropertyField.cshtml"), new PropertyField() { Label = T("Staff.Detail.DecisionDate").ToString(), Text = Model.StaffBonusDiscipline.SignDate.Value.ToString("dd/MM/yyyy") })
                    }
                    else
                    {
                        @Html.Partial(UrlHelpers.Template("_PropertyField.cshtml"), new PropertyField() { Label = T("Staff.Detail.DecisionDate").ToString(), Text = "" })
                    }
                    
                </div>
                <div class="col-md-5 pd-l-0">
                    @if (Model.StaffBonusDiscipline.ApplyDate != null && Model.StaffBonusDiscipline.ApplyDate != DateTime.MinValue)
                    {
                        @Html.Partial(UrlHelpers.Template("_PropertyField.cshtml"), new PropertyField() { Label = T("Staff.Detail.DateApply").ToString(), Text = Model.StaffBonusDiscipline.ApplyDate.Value.ToString("dd/MM/yyyy") })
                    }
                    else
                    {
                        @Html.Partial(UrlHelpers.Template("_PropertyField.cshtml"), new PropertyField() { Label = T("Staff.Detail.DateApply").ToString(), Text = "" })
                    }
                    
                </div>
            </div>
            <div class="col-md-12 pd-0 display-inline-block">
                <div class="col-md-7 pd-l-0">
                    @Html.Partial(UrlHelpers.Template("_PropertyField.cshtml"), new PropertyField() { Label = T("Staff.Discipline.Form").ToString(), Text = M(Model.StaffBonusDiscipline.ActionId.ToString() + ";" + DataType.MasterData + ";Name").ToString() })
                </div>
                <div class="col-md-5 pd-l-0">
                    @Html.Partial(UrlHelpers.Template("_PropertyField.cshtml"), new PropertyField() { Label = T("Table.Title.DisciplineLevel").ToString(), Text = String.Format("{0:#,##0.##}", Model.StaffBonusDiscipline.Amount) + " " + M(Model.StaffBonusDiscipline.CurrencyId.ToString() + ";" + DataType.MasterData + ";Name").ToString() })
                </div>
            </div>
            <div class="col-md-12 pd-0 display-inline-block">
                <div class="col-md-7 pd-l-0">
                    @Html.Partial(UrlHelpers.Template("_PropertyField.cshtml"), new PropertyField() { Label = T("Staff.Detail.Content").ToString(), Text = Model.StaffBonusDiscipline.Content })
                </div>
                <div class="col-md-5 pd-l-0">
                    @Html.Partial(UrlHelpers.Template("_PropertyField.cshtml"), new PropertyField() { Label = T("Staff.Detail.Note").ToString(), Text = Model.StaffBonusDiscipline.Note })
                </div>
            </div>
            <div class="col-md-12 pd-0 display-inline-block">
                <div class="col-md-7 pd-l-0">
                    <div class="section-title pull-left">
                        <div class="cb-control hrm-v2-inline-block pull-left">
                            <label for="PaySamePeriod" class="label-cbx">
                                <input id="PaySamePeriod" name="PaySamePeriod" type="checkbox" class="invisible chk_column">
                                <div class="checkbox" style="margin-top:0px">
                                    <svg width="20px" height="20px" viewBox="0 0 20 20">
                                        <path d="M3,1 L17,1 L17,1 C18.1045695,1 19,1.8954305 19,3 L19,17 L19,17 C19,18.1045695 18.1045695,19 17,19 L3,19 L3,19 C1.8954305,19 1,18.1045695 1,17 L1,3 L1,3 C1,1.8954305 1.8954305,1 3,1 Z"></path>
                                        <polyline points="4 11 8 15 16 6"></polyline>
                                    </svg>
                                </div>
                            </label>
                        </div>
                        <span class="pull-left hrm-v2-font-13" style="margin-top:5px">@T("Staff.Detail.PayOnPayPeriod")</span>
                    </div>
                </div>
                <div class="col-md-5 pd-l-0">
                    @if (Model.Attachments.Count > 0)
                    {
                        @Html.Partial(UrlHelpers.Template("_ViewAttachment.cshtml"), Model.Attachments.FirstOrDefault())
                    }
                </div>
            </div>
        </section>
    </div>
    <div class="footer">
        <div class="footer-login">
            <div class="pull-right">
                <button type="button" class="btn btn-primary hrm-v2-btn-close close-popup" data-dismiss="modal">
                    @T("Staff.Close")
                </button>
            </div>
        </div>
    </div>
</div>