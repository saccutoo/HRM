@model Hrm.Framework.Models.CheckboxModel
@{
    Layout = null;
}
<div class="cb-control">
    <label for="@Model.Name" class="label-cbx">
        <input id="@Model.Name" type="checkbox" name="@Model.Id" class="invisible chk_column hidden @Model.Class" value="@Model.Value" onclick="@Model.OnClick" @Model.Attribute @Model.AttributeValue @Model.AttributeMenuValue @Model.AttributeCheck>
        @{ 
            var mix = Model.IsMixedState ? "mix-state" : "";
        }
        <div class="checkbox @mix">
            <svg width="20px" height="20px" viewBox="0 0 20 20">
                <path d="M3,1 L17,1 L17,1 C18.1045695,1 19,1.8954305 19,3 L19,17 L19,17 C19,18.1045695 18.1045695,19 17,19 L3,19 L3,19 C1.8954305,19 1,18.1045695 1,17 L1,3 L1,3 C1,1.8954305 1.8954305,1 3,1 Z"></path>
                <polyline points="4 11 8 15 16 6"></polyline>
            </svg>
        </div>

    </label>
</div>