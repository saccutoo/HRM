@model Hrm.Framework.Models.CheckboxModel

@{
    ViewBag.Title = "_SwitchCheckbox";
}

<style>
    .switch {
        position: relative;
        display: inline-block;
        width: 42px;
        height: 15px;
        pointer-events:auto !important;
        margin-top:8px;
    }

        .switch input {
            opacity: 0;
            width: 0;
            height: 0;
        }

    .slider {
        position: absolute;
        cursor: pointer;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: #ccc;
        -webkit-transition: .4s;
        transition: .4s;
    }

        .slider:before {
            position: absolute;
            content: "";
            height: 15px;
            width: 15px;
            bottom: 0px;
            background-color: white;
            -webkit-transition: .4s;
            transition: .4s;
        }

    input:checked + .slider {
        background-color: #2ca01c;
    }

    input:focus + .slider {
        box-shadow: 0 0 1px #2196F3;
    }

    input:checked + .slider:before {
        -webkit-transform: translateX(26px);
        -ms-transform: translateX(26px);
        transform: translateX(26px);
    }

    /* Rounded sliders */
    .slider.round {
        border-radius: 34px;
    }

    .slider.round:before {
            border-radius: 50%;
     }
    .switch-chexbox-input-check{
        height: 100%;
        float: left;
        clear: both;
        width: 10%;
    }
    .switch-chexbox-title-check{
        height: 100%;
        float: left;
        width: calc(100% - 10%);
    }
    .switch-chexbox-title-check .hrm-v2-font-13{
       line-height: 60px;
    }
</style>

<div class="switch-chexbox-input-check ">
    <label class="switch">
        <input type="checkbox" id="@Model.Id" name="@Model.Name" onchange="@Model.OnChange" value="@Model.Value" @Model.Attribute/>
        <span class="slider round"></span>
    </label>
</div>
<div class="switch-chexbox-title-check">
    <span class="hrm-v2-font-13">@Model.LabelName</span>
</div>

