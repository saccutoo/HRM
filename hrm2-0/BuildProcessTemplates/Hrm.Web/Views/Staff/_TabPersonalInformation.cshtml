                <div class="col-md-6 pd-0">
                    <div class="col-md-6 pd-0">
                        @Html.Partial(UrlHelpers.Template("_PropertyField.cshtml"), new PropertyField() { Label = T("Staff.Detail.TaxNumber").ToString(), Text = Model.Staff.TaxId })
                    </div>
                </div>
                <div class="col-md-6 pd-0">
                    @if (Model.Staff != null && Model.Staff.TaxDate != null)
                    {
                        @Html.Partial(UrlHelpers.Template("_PropertyField.cshtml"), new PropertyField() { Label = T("Staff.Detail.TaxIssuedDate").ToString(), Text = Model.Staff.TaxDate.Value.ToString("dd/MM/yyyy") })
                    }
                    else
                    {
                        @Html.Partial(UrlHelpers.Template("_PropertyField.cshtml"), new PropertyField() { Label = T("Staff.Detail.TaxIssuedDate").ToString(), Text = "-" })
                    }
                </div>
            </div>
            <div class="col-md-12 pd-0 display-inline-block">
                <div class="col-md-6 pd-0">
                    @Html.Partial(UrlHelpers.Template("_PropertyField.cshtml"), new PropertyField() { Label = T("Staff.Detail.IdentityNumber").ToString(), Text = Model.Staff.IdentityNumber })
                </div>
                <div class="col-md-6 pd-0">
                    <div class="col-md-6 pd-0">
                        @if (Model.Staff != null && Model.Staff.IdIssuedDate != null)
                        {
                            @Html.Partial(UrlHelpers.Template("_PropertyField.cshtml"), new PropertyField() { Label = T("Staff.Detail.CreateDate").ToString(), Text = Model.Staff.IdIssuedDate.Value.ToString("dd/MM/yyyy") })
                        }
                        else
                        {
                            @Html.Partial(UrlHelpers.Template("_PropertyField.cshtml"), new PropertyField() { Label = T("Staff.Detail.CreateDate").ToString(), Text = "-" })
                        }

                    </div>
                </div>
            </div>
        </div>
    </section>
    <span class="pull-left btn-expand" onclick="StaffInfoShowMore(true)">@T("Staff.Detail.ViewMore") <i class="fas fa-sort-down"></i></span>
    <span class="pull-left btn-collapse" onclick="StaffInfoShowMore(false)">@T("Staff.Detail.Collapse")<i class="fas fa-sort-up"></i></span>
</div>
