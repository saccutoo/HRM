            </div>
            <div class="col-md-6 pd-0">
                @Html.Partial(UrlHelpers.Template("_PropertyField.cshtml"), new PropertyField() { Label = T("Staff.Detail.Gender").ToString(), Text = M(Model.Staff.GenderId.ToString() + ";" + DataType.MasterData + ";Name").ToString() })
            </div>
        </div>
