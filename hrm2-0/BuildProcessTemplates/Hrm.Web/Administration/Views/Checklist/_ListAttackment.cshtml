@model List<Hrm.Framework.Models.AttachmentModel>
@using Hrm.Common
@{
    Layout = null;
}

<style>
    .attackment-bottom-content {
        width: auto;

    }

        .attackment-bottom-content .attackment-right-content {
            width: 350px;
            background-color: #F8F8F8;
            height: 30px;
            float: left;
            margin-left: 10px;
        }

            .attackment-bottom-content .attackment-right-content .attackment-right-date {
                width: 20%;
                float: left;
                height: 100%;
                line-height: 30px;
                margin-left: 10px;
            }

            .attackment-bottom-content .attackment-right-content .attackment-right-name {
                width: 50%;
                float: left;
                height: 100%;
                line-height: 30px;
                display: block;
                overflow: hidden;
                text-overflow: ellipsis;
                word-break: normal;
            }

        .attackment-bottom-content .attackment-right-kb {
            float: left;
            width: 20%;
            height: 100%;
            line-height: 30px;
        }
        .attackment-bottom-content .attackment-right-remove {
            float: left;
            width: 5%;
            height: 100%;
            line-height: 30px;
            cursor:pointer;
        }
        .attackment-bottom-content .attackment-right-remove span{
             line-height: 30px;
        }
</style>
<div class="attackment-bottom-content">

    @if (Model.Count() > 0)
    {
        foreach (var item in Model)
        {
            <div class="attackment-right-content">
                <div class="attackment-right-date">
                    <span>@item.CreatedDate.ToString("dd")@item.CreatedDate.ToString("MM")@item.CreatedDate.ToString("yyyy")</span>
                </div>
                <div class="attackment-right-name">
                    <span style="margin-left:10px">@item.DisplayFileName</span>
                </div>
                <div class="attackment-right-kb">
                    <span>@item.FileSize KB</span>
                </div>
                <div class="attackment-right-remove">
                    <span class="fas fa-times" onclick="removeFile('@item.FileName','@item.Id')"></span>
                </div>
            </div>
        }
    }
      
</div>