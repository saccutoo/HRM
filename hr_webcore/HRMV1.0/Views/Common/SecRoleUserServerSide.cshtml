<style>
    .demo-section {
        display: block;
        border: 1px solid none;
        padding: 5px;
        margin-top: 5px;
        width: auto;
        height: 500px;
        overflow: scroll;
    }
</style>
<div class="col-lg-12">
    <div class="col-md-12">
        <h3 style="text-transform: none; margin-top:5px;">Lựa chọn User</h3>
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover tabel-condensed">
                <thead>
                    <tr class="success">
                        <th style="text-transform: none;">
                            Lựa chọn
                        </th>
                        <th style="text-transform: none;">
                            User Name
                        </th>
                        <th style="text-transform: none;">
                            Phòng Ban
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="employee in employees">
                        <td>
                            <input type="checkbox" ng-click="editClick(employee)" id="{{employee.UserID}}">
                        </td>
                        <td style="text-align: left">
                            <a id="checkFollower" ng-click="choseClick(employee);">{{employee.UserName}}</a>
                        </td>
                        <td style="text-align: left">
                            <a id="checkFollower" ng-click="choseClick(employee);">{{employee.DepartmentName}}</a>
                        </td>
                    </tr>
                </tbody>
                <tfoot>
                    <tr>
                        <td align="center" colspan="3">
                            <span class="form-group pull-left page-size form-inline">
                                <select class="form-control control-color"
                                        ng-model="pageSizeSelected"
                                        ng-change="changePageSize()" convert-to-number>
                                    <option ng-repeat="pageSizeItem in lstPageSize " value="{{pageSizeItem}}">{{pageSizeItem}}</option>
                                </select>
                            </span>
                            <div class="pull-right">
                                <ul uib-pagination total-items="totalCount" ng-change="pageChanged()" items-per-page="pageSizeSelected" direction-links="true" ng-model="pageIndex" max-size="maxSize" class="pagination" boundary-links="true" rotate="false" num-pages="numPages"></ul>

                            </div>
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>
<button type="button" class="btn btn-success" ng-click="UpdateClick()" style="margin-left:560px; margin-top:20px;">Cập nhật</button>
