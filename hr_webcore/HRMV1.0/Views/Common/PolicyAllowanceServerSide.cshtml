@using HRM.App_LocalResources;
@using HRM.Common

<style>
    table tr td {
    }

    table th {
        text-align: center;
    }

    .show-total {
        color: blue;
    }
    .table-responsive {
        overflow-x: unset !important;
    }
</style>
<div class="col-lg-12">
    <div class="col-md-12">
        <div class="table-responsive">
            <div class="row" style="margin: 0 0 15px;">
                <table class="table table-striped table-bordered table-hover tabel-condensed" style="width:525px;">
                    <thead>
                        <tr class="success">
                            <th>

                            </th>
                            <th ng-repeat="Column in Columns1 | orderBy:'OrderNo'">
                                @if (Global.CurrentLanguage == 5)
                                {
                                    <span ng-bind='Column.DisplayName' ng-click="sort(Column.ColumnName)" style="cursor: pointer;"></span><br />
                                }
                                else
                                {
                                    <span ng-bind='Column.DisplayNameEn' ng-click="sort(Column.ColumnName)" style="cursor: pointer;"></span><br />
                                }
                                
                                @*<span class="show-total" ng-bind="SetTotalByColumns(Column.ShowTotal)">-</span>*@
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr data-ng-repeat="employee in employees1">
                            <td>
                                <button class="mb-sm btn remove" ng-disabled=is_readonly type="button" ng-click="removeChoice($index,employee)">
                                    <i class="fa fa-remove"></i>
                                </button>
                            </td>
                            <td class="col-md-2" style="width:450px;" id="myDIV">                               
                                @if (Global.CurrentLanguage == 5)
                                {
                                    <select class="example" chosen options="ListConfigAllowance" id="AllowanceID" on-no-result="doStuff" ng-disabled=is_readonly ng-model="employee.AllowanceID" ng-options="list.AllowanceID as list.Name for list in ListConfigAllowance" ng-change="ChangeAllowanceID(employee)">
                                        <option value="" disabled selected>--@AppRes.Select--</option>
                                    </select>
                                }
                                else
                                {
                                    <select class="example" chosen options="ListConfigAllowance" id="AllowanceID" on-no-result="doStuff" ng-disabled=is_readonly ng-model="employee.AllowanceID" ng-options="list.AllowanceID as list.NameEN for list in ListConfigAllowance" ng-change="ChangeAllowanceID(employee)">
                                        <option value="" disabled selected>--@AppRes.Select--</option>
                                    </select>
                                }
                                @*<span ng-show="(employee.AllowanceID=='' || employee.AllowanceID==null)?true:false" style="color:red;line-height:30px;" >Chính sách phụ cấp này chưa được chọn!!!</span>*@
                            </td>                                                      
                        </tr>
                    </tbody>

                </table>
                <br />
                <button type="button" class="mb-sm btn addfields" ng-click="addNewChoice()">
                    <i class="fa fa-plus"></i>
                </button>

            </div>
        </div>
    </div>
</div>
