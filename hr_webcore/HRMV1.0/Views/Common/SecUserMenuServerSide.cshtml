<style>
    .demo-section {
        display: block;
        border: 1px solid none;
        padding: 5px;
        margin-top: 5px;
        width: auto;
        height: 500px;
        overflow: scroll;
    }
</style>
<div class="col-lg-12" style="margin-top:-20px;">
    <div class="col-md-12">
        <h3 style="text-transform: none;">Lựa chọn User</h3>
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover tabel-condensed demo-section">
                <thead>
                    <tr class="success">
                        <th style="text-transform: none;">
                            Lựa chọn
                        </th>
                        <th style="text-transform: none;">
                            User Name
                        </th>
                        <th style="text-transform: none;">
                            Phòng Ban
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="employee in employees">
                        <td>
                            <input type="checkbox" ng-click="editClick(employee)" id="{{employee.UserID}}">
                        </td>
                        <td style="text-align: left">
                            <a id="checkFollower" ng-click="choseClick(employee);">{{employee.UserName}}</a>
                        </td>
                        <td style="text-align: left">
                            <a id="checkFollower" ng-click="choseClick(employee);">{{employee.DepartmentName}}</a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
<button type="button" class="btn btn-success" ng-click="UpdateClick()" style="margin-left:542px; margin-top:2px;">Cập nhật</button>
