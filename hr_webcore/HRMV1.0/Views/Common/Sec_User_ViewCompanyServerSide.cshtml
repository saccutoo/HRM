<style>
    .table-responsive {
        display: block;
        border: 1px solid none;
        padding: 5px;
        margin-top: 5px;
        width: auto;
        height: 750px;
        overflow: scroll;
    }
</style>
<div class="col-lg-12">
    <div class="col-md-12">
        <h3 style="text-transform: none; margin-top:5px;">Lựa chọn Công ty</h3>
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover tabel-condensed">
                <thead>
                    <tr class="success">
                        <th class="text-center"><input type="checkbox" ng-model="CheckAllSecRole" /></th>
                        <th class="text-center">Danh sách công ty</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="employee in employees">
                        <td style="text-align:center">
                            <input type="checkbox" id="{{employee.OrganizationUnitID}}" name="SecRoeID" value="{{employee.OrganizationUnitID}}" ng-checked="CheckAllSecRole" />
                        </td>
                        <td style="text-align: left;">
                            <a style="margin-left:20px;" id="checkFollower" ng-click="choseClick(employee);">{{employee.Name}}</a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <button type="button" class="btn btn-danger" onclick="tai_lai_trang()" style="margin-left:15px;margin-top:20px;">Bỏ qua</button>
</div>

<script>
    function tai_lai_trang() {
        location.reload();
    }
</script>



