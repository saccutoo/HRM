<style>
    .table-responsive {
        display: block;
        border: 1px solid none;
        padding: 5px;
        margin-top: 5px;
        width: auto;
        height: 500px;
        overflow: scroll;
    }
</style>
<div class="col-lg-12">
    <div class="col-md-12">
        <h3 style="text-transform: none; margin-top:5px;">Lựa chọn Role</h3>
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover tabel-condensed">
                <thead>
                    <tr class="success">
                        <th style="text-transform: none;">
                            Lựa chọn
                        </th>
                        <th style="text-transform: none;">
                            Role Name
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="employee in employees">
                        <td>
                            <input type="checkbox" ng-model="checkRole" ng-click="editClick(employee)" id="{{employee.RoleID}}">
                        </td>
                        <td style="text-align: left">
                            <a id="checkFollower" ng-click="choseClick(employee);">{{employee.Name}}</a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
<button ng-if="results === '1'" type="button" class="btn btn-success" ng-click="UpdateClick()" style="margin-left:560px; margin-top:20px;">Cập nhật</button>

<button ng-if="results === '2'" type="button" class="btn btn-danger" onclick="tai_lai_trang()" style="margin-left:0px; margin-top:20px;">Bỏ qua</button>

<script>
    function tai_lai_trang() {
        location.reload();
    }
</script>