
<style>
    .demo-section {
        display: block;
        border: 1px solid none;
        padding: 5px;
        margin-top: 5px;
        width: auto;
        height: 500px;
        overflow: scroll;
    }
</style>
<div class="col-lg-12" style="margin-top:-15px;">
    <div class="col-md-12">
        <h3 style="text-transform: none;">Lựa chọn chức năng các bảng</h3>
        <table class="table table-striped table-bordered table-hover tabel-condensed demo-section">
            <thead>
                <tr class="success">
                    <th style="text-transform: none;">
                        Lựa chọn
                    </th>
                    <th style="text-transform: none;">
                        Tên Table
                    </th>
                    <th style="text-transform: none;">
                        Thêm
                    </th>
                    <th style="text-transform: none;">
                        Sửa
                    </th>
                    <th style="text-transform: none;">
                        Xóa
                    </th>
                    <th style="text-transform: none;">
                        Hoạt động
                    </th>
                    <th style="text-transform: none;">
                        Tìm kiếm
                    </th>
                    <th style="text-transform: none;">
                        Excel
                    </th>
                    <th style="text-transform: none;">
                        Cập nhật
                    </th>
                    <th style="text-transform: none;">
                        Approval
                    </th>
                    <th style="text-transform: none;">
                        DisApproval
                    </th>
                    <th style="text-transform: none;">
                        Copy
                    </th>
                    <th style="text-transform: none;">
                        Index
                    </th>
                    <th style="text-transform: none;">
                        Get
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="employeesysrole in employees">
                    <td>
                        <input type="checkbox" ng-click="ChoseAll(employeesysrole)" ng-model="idcheck" id="{{employeesysrole.id}}">
                    </td>
                    <td style="text-align: left">
                        {{employeesysrole.TableName}}
                    </td>
                    <td style="text-align: center">
                        <input type="checkbox" ng-click="editClick1(employeesysrole)" id="isAdd-{{employeesysrole.id}}">
                    </td>
                    <td style="text-align: center">
                        <input type="checkbox" ng-click="editClick1(employeesysrole)" id="isEdit-{{employeesysrole.id}}">
                    </td>
                    <td style="text-align: center">
                        <input type="checkbox" ng-click="editClick1(employeesysrole)" id="isDelete-{{employeesysrole.id}}">
                    </td>
                    <td style="text-align: center">
                        <input type="checkbox" ng-click="editClick1(employeesysrole)" id="isActive-{{employeesysrole.id}}">
                    </td>
                    <td style="text-align: center">
                        <input type="checkbox" ng-click="editClick1(employeesysrole)" id="isFilterButton-{{employeesysrole.id}}">
                    </td>
                    <td style="text-align: center">
                        <input type="checkbox" ng-click="editClick1(employeesysrole)" id="isExcel-{{employeesysrole.id}}">
                    </td>
                    <td style="text-align: center">
                        <input type="checkbox" ng-click="editClick1(employeesysrole)" id="isSubmit-{{employeesysrole.id}}">
                    </td>
                    <td style="text-align: center">
                        <input type="checkbox" ng-click="editClick1(employeesysrole)" id="isApproval-{{employeesysrole.id}}">
                    </td>
                    <td style="text-align: center">
                        <input type="checkbox" ng-click="editClick1(employeesysrole)" id="isDisApproval-{{employeesysrole.id}}">
                    </td>
                    <td style="text-align: center">
                        <input type="checkbox" ng-click="editClick1(employeesysrole)" id="isCopy-{{employeesysrole.id}}">
                    </td>
                    <td style="text-align: center">
                        <input type="checkbox" ng-click="editClick1(employeesysrole)" id="isIndex-{{employeesysrole.id}}">
                    </td>
                    <td style="text-align: center">
                        <input type="checkbox" ng-click="editClick1(employeesysrole)" id="isGet-{{employeesysrole.id}}">
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
<button type="button" class="btn btn-danger" onclick="tai_lai_trang()" style="margin-left:200px; margin-top:2px;">Bỏ qua</button>

<script>
    function tai_lai_trang() {
        location.reload();
    }
</script>