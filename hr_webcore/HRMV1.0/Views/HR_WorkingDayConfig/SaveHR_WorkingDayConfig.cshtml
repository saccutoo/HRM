@using HRM.App_LocalResources;
@using HRM.Common
<div class="container-fluid">
    <div class="row" id="SaveWorkingDayMachineSatList" style="margin: 0;">
        <form role="form" name="EditForm" ng-submit="SaveAction(tableInfo.AddUrl,EditForm)">
            <div class="col-md-12">
                <!-- START panel-->
                <div class="panel">
                    <div class="panel-heading"><h3 style="text-transform: none;">@AppRes.WorkingDayConfig </h3></div>
                    <hr />
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="row">
                                    <div class="col-sm-4">
                                        <label style="line-height:35px;">@AppRes.DateFromNumber <span style="color:red"> (*)</span></label>
                                    </div>
                                    <div class="col-sm-8">
                                        <input type="number" class="form-control" ng-model="editData.DateFromNumber" ng-change="changeDateFromNumber()"/>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="row">
                                    <div class="col-sm-4">
                                        <label style="line-height:30px;">@AppRes.DateToNumber <span style="color:red"> (*)</span></label>
                                    </div>
                                    <div class="col-sm-8">
                                        <input type="number" class="form-control" ng-model="editData.DateToNumber" ng-change="changeDateToNumber()"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <br />
                        <br />
                        <div class="row">
                            <div class="col-md-6">
                                <div class="row">
                                    <div class="col-md-4">
                                        <label style="line-height:30px;">@AppRes.WorkingDayMachineName<span style="color:red"> (*)</span></label>
                                    </div>
                                    <div class="col-md-8">
                                        @if (Global.CurrentLanguage == 5)
                                        {
                                            <select class="form-control" chosen options="getListHR_WorkingDayMachine" on-no-result="doStuff" required data-modal="modal" ng-model="editData.WorkingDayMachineID" ng-options="list.WorkingDayMachineID as list.Name for list in getListHR_WorkingDayMachine" ng-change="ChangeType()">
                                                <option value="" selected>--@AppRes.Select--</option>
                                            </select>
                                        }
                                        else
                                        {
                                            <select class="form-control" chosen options="getListHR_WorkingDayMachine" on-no-result="doStuff" required data-modal="modal" ng-model="editData.WorkingDayMachineID" ng-options="list.WorkingDayMachineID as list.NameEN for list in getListHR_WorkingDayMachine" ng-change="ChangeType()">
                                                <option value="" selected>--@AppRes.Select--</option>
                                            </select>
                                        }
                                      
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="row">
                                    <div class="col-md-4" style="line-height:30px;">
                                        <label style="line-height:30px;">@AppRes.NoTimeChecking</label>
                                    </div>
                                    <div class="col-md-8">
                                        <input type="checkbox" class="form-control" ng-model="editData.NoTimeChecking" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <br />
                        <br />
                        <div class="row">
                            <div class="col-md-6">
                                <div class="row">
                                    <div class="col-md-4">
                                        <label style="line-height:30px;">@AppRes.StartMonth <span style="color:red"> (*)</span></label>
                                    </div>
                                    <div class="col-md-8">
                                        <input type="text" class="form-control StartMonthGet" ng-model="editData.StartMonthGet"  ng-change="changeStartMonthGet()"/>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="row">
                                    <div class="col-md-4" style="line-height:30px;">
                                        <label style="line-height:30px;">@AppRes.EndMonth</label>
                                    </div>
                                    <div class="col-md-8">
                                        <input type="text" class="form-control EndMonthGet" ng-model="editData.EndMonthGet" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <br />
                        <br />
                        <div class="col-sm-12">
                            <span style="color:red" ng-bind="Mesenger"></span>
                        </div>
                    </div>
                </div>
                <!-- END panel-->
                <center>
                    <button ng-show="tablePermission.isEdit" type="button" class="btn btn-success btn-labeled" ng-click="Save()">
                        <span class="btn-label">
                            <i class="fa fa-save"></i>
                        </span>@AppRes.btnUpdate
                    </button>
                    <button type="reset" class="btn btn-labeled" ng-click="CloseForm()">
                        <span class="btn-label">
                            <i class="fa fa-close"></i>
                        </span>@AppRes.btnCancel
                    </button>
                </center>
            </div>
        </form>
    </div>
</div>

