@using HRM.App_LocalResources;
@using HRM.Common;
<div class="container-fluid">
    <div class="row" id="SavePersonalIncomeTax" style="margin: 0;">
        <form role="form" name="EditForm" ng-submit="SaveAction(tableInfo.AddUrl,EditForm)">
            <div class="col-md-12">
                <!-- START panel-->
                <div class="panel">
                    <div class="panel-heading"><h3 style="text-transform: none;">@AppRes.PersonalIncomeTax</h3></div>
                    <hr />
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="row">
                                    <div class="col-md-3" style="line-height:30px;">
                                        <label>@AppRes.IncomeFrom <span style="color:red">(*)</span></label>
                                    </div>
                                    <div class="col-md-9">
                                        <input type="text" ng-model="Data.FromAmount" class="form-control" ng-change="ChangeFromAmount()" />
                                        <span style="color:red;line-height:30px;">{{ErrorFromAmount}}</span>
                                    </div>

                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="row">
                                    <div class="col-md-3" style="line-height:30px;">
                                        <label>@AppRes.IncomeComes </label>
                                    </div>
                                    <div class="col-md-9">
                                        <input type="text" ng-model="Data.ToAmount" class="form-control" ng-change="ChangeToAmount()" />
                                        <span style="color:red;line-height:30px;">{{ErrorToAmount}}</span>
                                    </div>

                                </div>
                            </div>
                        </div>
                        <br />
                        <br />
                        <div class="row">
                            <div class="col-md-6">
                                <div class="row">
                                    <div class="col-md-3" style="line-height:30px;">
                                        <label>@AppRes.ProgressiveLevel <span style="color:red">(*)</span></label>
                                    </div>
                                    <div class="col-md-9">
                                        <input type="text" ng-model="Data.ProgressiveTax" class="form-control" ng-change="ChangeProgressiveTax()" />
                                        <span style="color:red;line-height:30px;">{{ErrorProgressiveTax}}</span>
                                    </div>

                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="row">
                                    <div class="col-md-3" style="line-height:30px;">
                                        <label>@AppRes.Tax <span style="color:red">(*)</span></label>
                                    </div>
                                    <div class="col-md-9">
                                        <input class="form-control" ng-model="Data.RateTax" ng-change="ChangeRateTax()" />
                                        <span style="color:red;line-height:30px;">{{ErrorRateTax}}</span>
                                    </div>

                                </div>
                            </div>
                        </div>
                        <br />
                        <br />
                        <div class="row">
                            <div class="col-md-6">
                                <div class="row">
                                    <div class="col-md-3" style="line-height:30px;">
                                        <label>@AppRes.HR_FromDate <span style="color:red">(*)</span></label>
                                    </div>
                                    <div class="col-md-9">
                                        <input type="text" ng-model="Data.StartDate" class="StartDate form-control" ng-change="ChangeStartDate()" />
                                        <span style="color:red;line-height:30px;">{{ErrorStartDate}}</span>
                                    </div>

                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="row">
                                    <div class="col-md-3" style="line-height:30px;">
                                        <label>@AppRes.HR_ToDate </label>
                                    </div>
                                    <div class="col-md-9">
                                        <input type="text" class="EndDate form-control" ng-model="Data.EndDate" ng-change="ChangeEndDate()" />
                                        <span style="color:red;line-height:30px;">{{ErrorEndDate}}</span>
                                    </div>

                                </div>
                            </div>
                        </div>
                        <br />
                        <br />
                        <div class="row">
                            <div class="col-md-6">
                                <div class="row">
                                    <div class="col-md-3" style="line-height:30px;">
                                        <label>@AppRes.C_CurrencyID <span style="color:red">(*)</span></label>
                                    </div>
                                    <div class="col-md-9">
                                        @if (Global.CurrentLanguage == 5)
                                        {
                                            <select ng-model="Data.CurrencyID" chosen options="getListCurrency" on-no-result="doStuff" required data-modal="modal" ng-options="list.OrderNo as list.Name for list in getListCurrency" ng-change="ChangeCurrencyID()">
                                                <option value="" selected>@AppRes.Select</option>
                                            </select>
                                        }
                                        else
                                        {
                                            <select ng-model="Data.CurrencyID" chosen options="getListCurrency" on-no-result="doStuff" required data-modal="modal" ng-options="list.OrderNo as list.NameEN for list in getListCurrency" ng-change="ChangeCurrencyID()">
                                                <option value="" selected>@AppRes.Select</option>
                                            </select>
                                        }
                                        <span style="color:red;line-height:30px;">{{ErrorCurrencyID}}</span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="row">
                                    <div class="col-md-3" style="line-height:30px;">
                                        <label>@AppRes.Promotion_Status <span style="color:red">(*)</span></label>
                                    </div>
                                    <div class="col-md-9">
                                        @if (Global.CurrentLanguage == 5)
                                        {
                                            <select ng-model="Data.Status" chosen options="getListStatus" on-no-result="doStuff" required data-modal="modal" ng-options="list.Value as list.Name for list in getListStatus" ng-change="ChangeStatus()">
                                                <option value="" selected>@AppRes.Select</option>
                                            </select>
                                        }
                                        else
                                        {
                                            <select ng-model="Data.Status" chosen options="getListStatus" on-no-result="doStuff" required data-modal="modal" ng-options="list.Value as list.NameEN for list in getListStatus" ng-change="ChangeStatus()">
                                                <option value="" selected>@AppRes.Select</option>
                                            </select>

                                        }
                                        <span style="color:red;line-height:30px;">{{ErrorStatus}}</span>
                                    </div>

                                </div>
                            </div>
                        </div>
                        <br />
                        <br />
                        <div class="row">
                            <div class="col-md-6">
                                <div class="row">
                                    <div class="col-md-3" style="line-height:30px;">
                                        <label>@AppRes.TitleCountry <span style="color:red">(*)</span></label>
                                    </div>
                                    <div class="col-md-9">
                                        @if (Global.CurrentLanguage == 5)
                                        {
                                            <select ng-model="Data.CountryID" chosen options="getListCountry" on-no-result="doStuff" required data-modal="modal" ng-options="list.Value as list.Name for list in getListCountry" ng-change="ChangeCountryID()">
                                                <option value="" selected>@AppRes.Select</option>
                                            </select>
                                        }
                                        else
                                        {
                                            <select ng-model="Data.CountryID" chosen options="getListCountry" on-no-result="doStuff" required data-modal="modal" ng-options="list.Value as list.NameEN for list in getListCountry" ng-change="ChangeCountryID()">
                                                <option value="" selected>@AppRes.Select</option>
                                            </select>
                                        }

                                        <span style="color:red;line-height:30px;">{{ErrorCountryID}}</span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="row">
                                    <div class="col-md-3" style="line-height:30px;">
                                        <label>@AppRes.CustNote </label>
                                    </div>
                                    <div class="col-md-9">
                                        <input type="text" class="form-control" ng-model="Data.Note" />
                                        <span style="color:red;line-height:30px;">{{ErrorNote}}</span>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- END panel-->
            </div>
            <br />
            <center>
                <button type="button" class="btn btn-success btn-labeled" ng-click="Save()">
                    <span class="btn-label">
                        <i class="fa fa-save"></i>
                    </span>@AppRes.btnUpdate
                </button>
                <button type="reset" class="btn btn-labeled" ng-click="CloseForm()">
                    <span class="btn-label">
                        <i class="fa fa-close"></i>
                    </span>@AppRes.btnCancel
                </button>
            </center>
        </form>
    </div>
</div>

