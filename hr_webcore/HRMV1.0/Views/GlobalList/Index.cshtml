@{
    ViewBag.Title = "GlobalList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using HRM.App_LocalResources;
@using HRM.Common;
<style>
    .demo-section1 {
        display: block;
        border: 1px solid none;
        width: 240px;
        margin-top: 25px;
        overflow: scroll;
    }

    .demo-section2 {
        display: block;
        border: 1px solid none;
        margin-top: 52px;
        max-height: 910px;
        width: calc(100% - 266px);
        overflow: auto;
    }

    .demo-section1 li {
        display: inline-block;
        width: 100%;
    }
    .box-right-globallist {
        padding: 16px 0px!important;
        position: relative;
        background-color: #fff;
        width: 100%;
        height: 68px;
        margin:0px!important;
        z-index:999;
    }
    .page-size-selected {
        margin: 18px 0;
        border-radius:4px;
    }
</style>
<link href="~/Scripts/directive/angular-treeview/treeview.css" rel="stylesheet" />
<link href="~/Scripts/directive/angular-table/build-table.css" rel="stylesheet" />
<div class="container-fluid" ng-app="tableApp" ng-cloak>
    <div class="row" ng-controller="mytable">
        <div class="col-xs-3 col-sm-2  menu-department" style="margin-top:10px;box-sizing:content-box;width:240px">
            <h5 style="color:black;"><span class="glyphicon glyphicon-th-list" style="margin-right:4px"></span>@AppRes.GeneralCatalog</h5>
            <div class="demo-section1" ng-if="currentLanguage==5">
                <div data-angular-treeview="true"
                     data-tree-id="organizationUnitTree"
                     data-tree-model="sourceOrganizationUnit"
                     data-node-id="id"
                     data-node-label="Name"
                     data-node-children="children"
                     data-ng-click="FilterOrganizationUnitByNodeId()">
                </div>
            </div>
            <div class="demo-section1" ng-if="currentLanguage!=5">
                <div data-angular-treeview="true"
                     data-tree-id="organizationUnitTree"
                     data-tree-model="sourceOrganizationUnit"
                     data-node-id="id"
                     data-node-label="NameEN"
                     data-node-children="children"
                     data-ng-click="FilterOrganizationUnitByNodeId()">
                </div>
            </div>
        </div>
        <div class="col-xs-9 col-sm-10 demo-section2 no-padding" style="margin-top:0px;">
            @Html.Action("TableServerSide", "Common")
            <div style="display: none;">
                @Html.Action("AddGlobalList", "GlobalList")
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/mycustom/GlobalList/GlobalListService.js"></script>
<script src="~/js/Jquery-ui/jquery-ui.js"></script>
<script src="~/Scripts/Colorbox/jquery.colorbox-min.js"></script>
<link href="~/Content/css/jquery-ui.css" rel="stylesheet" />
<script src="~/Scripts/directive/angular-treeview/angular-treeview.js"></script>
<script src="~/Scripts/directive/angular-table/angular-table.js"></script>
<script src="~/Scripts/mycustom/GlobalList/GlobalListUntil.js"></script>

<script>
    BuildTable('tableApp', 'mytable', '@(ViewBag.url)');
</script>
