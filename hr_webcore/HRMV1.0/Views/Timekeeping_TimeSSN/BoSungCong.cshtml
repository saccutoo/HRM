@using HRM.App_LocalResources;
@using HRM.Common
<style>
    .col-centered {
        display: inline-block;
        float: none;
        text-align: left;
        margin-right: -4px;
        text-align: center;
        height: 340px;
    }
</style>
<div class="container-fluid">
    <div id="bosungcong">
        <div class="row col-lg-12" style="margin: 0;">
            <h2>@AppRes.TitleTimeKeepingSupplement : {{FromMonth}}</h2>
        </div>
        <div class="col-lg-12" style="padding:0">
            <div class="table-responsive ">
                <br />
                <table class="table table-striped table-bordered table-hover tabel-condensed">
                    <thead>
                        <tr class="success">
                            <th>

                            </th>
                            <th ng-repeat="Column in Columnpopup | orderBy:'OrderNo'">
                                <span ng-if="Column.CustomHTML != null" compile="Column.DisplayName" style="cursor: pointer;"></span>
                                <span ng-if="Column.CustomHTML == null" ng-bind='@Global.CurrentLanguage==5?Column.DisplayName:Column.DisplayNameEn' ng-click="sort(Column.ColumnName)" style="cursor: pointer;"></span><br />
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="employee in employeebosungs | orderBy:'OrderNo'">
                            <td>
                                <a ng-click="addNewChoice(employee)" title="Chỉnh sửa">
                                    <i class="glyphicon glyphicon-edit" style="color:blue;"></i>
                                </a>
                                <a ng-click="deleteBosung(employee)" title="Xóa">
                                    <i class="glyphicon glyphicon-trash" style="color:red;"></i>
                                </a>
                            </td>
                            <td ng-repeat="Column in Columnpopup | orderBy:'OrderNo' | date:'shortTime'">
                                <span ng-if="Column.CustomHTML != null" compile="Column.CustomHTML"></span>
                                <span class="{{Column.Class}}" ng-if="Column.CustomHTML == null" title="{{formatData(Column.Type,employee[Column.ColumnName],Column.DataFomat)}}" ng-bind='formatData(Column.Type,employee[Column.ColumnName],Column.DataFomat)'></span>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="15" style="text-align:left">
                                <button type="button" class="mb-sm btn addfields" ng-click="addNewChoice(0)">
                                    <i class="fa fa-plus"></i>
                                </button>
                            </td>
                        </tr>
                    </tbody>
                    <tfoot>
                        <tr>
                            <td align="center" colspan="{{dodaiColumnpopup}}">

                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="col-md-6 col-centered">

                                            <button type="button" class="btn btn-primary btn-labeled" ng-click="submitAddDayMiss()">
                                                <span class="btn-label">
                                                    <i class="fa fa-save"></i>
                                                </span>@AppRes.btnSendApproval
                                            </button>

                                            <button type="button" class="btn btn-labeled" ng-click="CloseForm()">
                                                <span class="btn-label">
                                                    <i class="fa fa-close"></i>
                                                </span>@AppRes.btnCancel
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    </tfoot>
                </table>

                @*<div class="row">
                    <div class="col-md-12">
                        <div class="col-md-6 col-centered">
                            <button  title="@AppRes.Browser" type="button" class="btn btn-primary btn-labeled" ng-click="LuuDuyet(1)">
                                <span class="btn-label">
                                    <i class="fa fa-save"></i>
                                </span>@AppRes.Browser
                            </button>

                            <button type="button" class="btn btn-labeled" ng-click="CloseForm()">
                                <span class="btn-label">
                                    <i class="fa fa-close"></i>
                                </span>@AppRes.btnCancel
                            </button>
                        </div>
                    </div>
                </div>*@
            </div>
        </div>

    </div>
</div>
<div style="display: none;">
    @Html.Action("AddBoSungCong", "TimeKeeping_TimeSSN")
</div>