@using HRM.App_LocalResources;
@{
    ViewBag.Title = AppRes.StandardSpending;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    body {
        overflow-x: hidden;
    }

    .menu-department {
        height: 95vh;
        border-right: 1px solid #f3f3f3;
    }

    .demo-section1 {
        display: block;
        margin-top: 32px;
        height: 500px;
        margin-right: -50px;
        overflow: scroll;
        margin-left: -28px;
    }

        .demo-section1 li {
            display: inline-block;
            width: 100%;
        }
</style>
<link href="~/Scripts/directive/angular-table/build-table.css" rel="stylesheet" />
<script>
    var errorDate= @Html.Raw(Json.Encode(AppRes.ErrorDate));
    var errorEmployeeLevel= @Html.Raw(Json.Encode(AppRes.ErrorEmployeeLevel));
    var errorStandardSpending= @Html.Raw(Json.Encode(AppRes.ErrorStandardSpending));
    var errorSpendingIsNumber= @Html.Raw(Json.Encode(AppRes.ErrorSpendingIsNumber));
    var errorSelectPolicy= @Html.Raw(Json.Encode(AppRes.ErrorSelectPolicy));
    var errorInteger= @Html.Raw(Json.Encode(AppRes.ErrorInteger));
    var errorStatus=@Html.Raw(Json.Encode(AppRes.ErrorStatus));
    var errorDateStart=@Html.Raw(Json.Encode(AppRes.ErrorDateStart));
    var errorCreateDate=@Html.Raw(Json.Encode(AppRes.ErrorCreateDate));
    var errorCompareDate=@Html.Raw(Json.Encode(AppRes.ErrorCompareDate));
    var errorEmployeesIsNumber=@Html.Raw(Json.Encode(AppRes.ErrorEmployeesIsNumber));

</script>
<div class="container-fluid" ng-app="tableApp">
    <div class="row">
        <div ng-controller="mytable" ng-init="init()">
            <div style="display: none;">
                @Html.Action("SaveStandardSpending", "StandardSpending")
            </div>
            <build-fixed-table table-url="'@(ViewBag.url)'"
                               table-edit="editClick"
                               table-delete="deleteClick"
                               table-excel-click="ExcelClick"
                               table-add="addClick"
                               table-param-filter="employeeFilter"
                               table-model="StandardSpendingData">
            </build-fixed-table>
        </div>
    </div>
</div>
<script src="~/Scripts/directive/angular-treeview/angular-treeview.js"></script>
<script src="~/Scripts/directive/angular-table/angular-table.js"></script>
<script src="~/Scripts/mycustom/TableService.js"></script>
<script src="~/Scripts/mycustom/StandardSpending/StandardSpendingUntil.js"></script>

<script>
    BuildTable('tableApp', 'mytable', '@(ViewBag.url)');
</script>

